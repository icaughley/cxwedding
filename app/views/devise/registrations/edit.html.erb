<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { autocomplete: "off", method: :put, class: "form-horizontal" }) do |f| %>

  <%= f.input :name %>
  <%= f.input :email %>
  <%= f.input :current_password %>

  <%= f.input :password, label: "New password", hint: "(leave blank if you don't want to change it)" %>

  <%= f.input :password_confirmation %>

  <%= link_to "Back", :back, class: "btn" %>
  <%= f.submit "Update", class: "btn btn-primary" %>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %>.</p>

