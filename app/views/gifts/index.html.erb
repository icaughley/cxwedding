<h1>Listing gifts</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Location</th>
    <th>Value</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @gifts.each do |gift| %>
  <tr>
    <td><%= gift.title %></td>
    <td><%= gift.description %></td>
    <td><%= gift.location %></td>
    <td><%= gift.value %></td>
    <td><%= link_to 'Show', gift %></td>
    <td><%= link_to 'Edit', edit_gift_path(gift) %></td>
    <td><%= link_to 'Destroy', gift, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

