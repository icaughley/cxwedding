<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <% if user_signed_in? and current_user.admin? %>
        <a class="brand" href="/">CXWedding</a>
      <% else %>
        <a class="brand" href="/">Charles & Alexander's Gift Registry</a>
      <% end %>
      <% if user_signed_in? %>
        <% if current_user.admin? %>
          <ul class="nav">
            <li><%= link_to 'Gifts', gifts_path %></li>
            <li><%= link_to 'Users', users_path %></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">Dropbox<b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li><%= link_to 'Connect', dropbox_authorize_path %></li>
                <li><%= link_to 'Import', dropbox_path %></li>
              </ul>
            </li>
          </ul>
        <% end %>

        <div class="btn-group pull-right">
          <button class="btn dropdown-toggle" data-toggle="dropdown">
            <i class="icon-user"></i>
            <%= current_user.email %>
            <i class="caret"></i>
          </button>
          <ul class="dropdown-menu">
            <li><%= link_to('Profile', edit_user_registration_path) %></li>
            <li><%= link_to('Logout', destroy_user_session_path, method: :delete) %></li>
          </ul>
        </div>
      <% end %>
    </div>
  </div>
</div>
