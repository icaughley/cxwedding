<% id = "#{modal_name}_modal" %>
<div class="modal hide fade static" id="<%=id%>">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h3 id="modal-heading"></h3>
  </div>

  <div class="modal-body"></div>

  <div class="modal-footer">
  </div>

</div>

<script>
  $('#<%=id%>').modal({
    backdrop:'static',
    show:false
  });

  $('#<%=id%>').on('hidden', function () {
    $('#<%=id%> > .modal-header > h3').html("");
    $('#<%=id%> > .modal-body').html("");
    $('#<%=id%> > .modal-footer').html("");
  })
</script>